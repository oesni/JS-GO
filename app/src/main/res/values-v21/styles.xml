<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.TransparentStatusBar" parent="AppTheme">
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="AppTheme.TransparentStatusBar.NoActionBar" parent="AppTheme.TransparentStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
